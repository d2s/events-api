{
  "name": "events-api",
  "version": "1.0.0",
  "private": true,
  "description": "Events API",
  "main": "src/index.js",
  "scripts": {
    "dev": "micro-dev",
    "start": "micro",
    "lint": "xo",
    "test": "npm run lint",
    "build-docker": "docker build -t d2s/events-api:latest .",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "git-commit": "git-cz",
    "update-changelog": "standard-changelog",
    "release": "standard-version"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "xo": {
    "extends": "prettier"
  },
  "keywords": ["api"],
  "author": "Daniel Schildt <daniel.schildt@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "callbag-basics": "^3.0.0",
    "micro": "^9.3.0",
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.1",
    "@commitlint/config-conventional": "^6.1.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "2.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "micro-dev": "^2.2.2",
    "prettier": "1.12.1",
    "standard-version": "^4.3.0",
    "xo": "0.21.0"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.css": ["stylelint", "prettier --write", "git add"],
    "*.scss": ["stylelint --syntax=scss", "prettier --write", "git add"],
    "*.{js}": ["prettier --write", "git add"]
  }
}
