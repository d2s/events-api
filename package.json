{
  "name": "events-api",
  "version": "4.0.1",
  "private": true,
  "description": "Events API",
  "main": "src/index.js",
  "scripts": {
    "dev": "micro-dev",
    "start": "micro",
    "lint": "npx xo",
    "test": "npm run lint",
    "build-docker": "docker build -t d2s/events-api:latest .",
    "git-commit": "npx git-cz",
    "update-changelog": "standard-changelog",
    "release": "standard-version",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "git-push-tags": "git push --follow-tags origin master",
    "node-run": "node micro"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "xo": {
    "extends": "prettier"
  },
  "keywords": [
    "api"
  ],
  "author": "Daniel Schildt <daniel.schildt@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "callbag-basics": "4.0.0",
    "git-cz": "4.7.6",
    "micro": "9.3.4",
    "node-fetch": "2.6.1",
    "snyk": "1.666.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "4.3.8",
    "lint-staged": "11.1.1",
    "micro-dev": "3.0.0",
    "prettier": "2.3.2",
    "standard-changelog": "2.0.27",
    "standard-version": "9.3.0",
    "xo": "0.39.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss",
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "snyk": true
}
