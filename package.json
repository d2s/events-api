{
  "name": "events-api",
  "version": "1.0.0",
  "private": true,
  "description": "Events API",
  "main": "src/index.js",
  "scripts": {
    "dev": "micro-dev",
    "start": "micro",
    "lint": "xo",
    "test": "npm run lint",
    "build-docker": "docker build -t d2s/events-api:latest .",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "git-commit": "git-cz",
    "update-changelog": "standard-changelog",
    "release": "standard-version"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "xo": {
    "extends": "prettier"
  },
  "keywords": [
    "api"
  ],
  "author": "Daniel Schildt <daniel.schildt@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "callbag-basics": "^3.0.1",
    "git-cz": "^3.2.1",
    "micro": "^9.3.4",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commitizen": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-prettier": "6.0.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "micro-dev": "^3.0.0",
    "prettier": "1.18.2",
    "standard-version": "^6.0.1",
    "xo": "0.24.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss",
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  }
}
